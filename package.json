{
  "name": "toz-yapi-updated",
  "version": "1.0.0",
  "description": "Modern, production-ready project scaffolding and structure management tool",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsx src/build.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src tests --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"tests/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"tests/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist coverage",
    "prepare": "husky install",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "semantic-release",
    "validate": "npm run type-check && npm run lint && npm run test && npm run format:check"
  },
  "keywords": [
    "scaffolding",
    "project-structure",
    "typescript",
    "cli",
    "template",
    "generator",
    "productivity",
    "development-tools"
  ],
  "author": "TOZ Solutions <info@tozsolutions.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tozsolutions/toz-yapi-updated.git"
  },
  "bugs": {
    "url": "https://github.com/tozsolutions/toz-yapi-updated/issues"
  },
  "homepage": "https://github.com/tozsolutions/toz-yapi-updated#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "toz-yapi": "./dist/cli.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.7",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitepress": "^1.0.0-rc.31",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "yargs": "^17.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.3"
  }
}